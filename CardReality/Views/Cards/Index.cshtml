@model IEnumerable<CardReality.Data.Models.Card>

@{
    ViewBag.Title = "My Cards";
}

<h2>Cards</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AttackPoints)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DefensePoints)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.IsSpecial == false)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AttackPoints)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DefensePoints)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                    @Html.ActionLink("Sell", "Sell", new {id = item.Id})
                </td>
            </tr>
        }
    }

</table>

<h2>Special Cards</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SpecialEffect)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        if (item.IsSpecial == true)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SpecialEffect)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                    @Html.ActionLink("Sell", "Sell", new {id = item.Id})
                </td>
            </tr>
        }
    }
</table>