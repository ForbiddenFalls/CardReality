@model IEnumerable<CardReality.Data.Models.Letter>

@{
    ViewBag.Title = "Letters";
}

<div class="page-header clearfix">
    <h2 class="pull-left">Letter</h2>

    <div class="pull-right">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-default" })
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Char)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Weight)
        </th>
        <th>
            Actions
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Char)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Weight)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, "Letter") |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, "Letter")
        </td>
    </tr>
}

</table>
